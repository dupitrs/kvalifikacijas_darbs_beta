{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "/*.css", "/*.js", "/*.png", "/*.svg", "/*.ico"]
  },
  "responseOverrides": {
    "404": { "rewrite": "/index.html" }
  },
  "globalHeaders": [
    {
      "source": "/index.html",
      "headers": [
        { "name": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "name": "Pragma", "value": "no-cache" },
        { "name": "Expires", "value": "0" }
      ]
    }
  ]
}
